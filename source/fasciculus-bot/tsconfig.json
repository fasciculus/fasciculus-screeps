{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [ "ESNext" ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "newLine": "crlf",
    "noImplicitReturns": true,
    "outDir": "temp",
    "rootDir": "src",
    "strict": true,
    "strictPropertyInitialization": true,
    "target": "ES2015"
  },
  "include": [ "src/**/*.ts" ]
}